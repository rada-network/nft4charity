{
  "name": "backend",
  "version": "0.0.1",
  "description": "Backend service to support TTMB project",
  "author": "RADA Dev Team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "yarn install && rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "cross-env NODE_ENV=test && jest",
    "test:watch": "cross-env NODE_ENV=test && jest --watch",
    "test:cov": "cross-env NODE_ENV=test && jest --coverage",
    "test:debug": "cross-env NODE_ENV=test && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test && jest --config ./test/jest-e2e.json --maxWorkers=1",
    "format": "yarn pretty && yarn lint",
    "format:check": "yarn pretty:check & yarn lint:check",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix --max-warnings=0",
    "lint:check": "eslint \"{src,test}/**/*.ts\"",
    "pretty": "prettier --write \"{src,test}/**/*.ts\" --end-of-line lf",
    "pretty:check": "prettier --check \"{src,test}/**/*.ts\" --end-of-line lf",
    "prettier": "prettier --write --end-of-line lf",
    "eslint": "eslint --fix --max-warnings=0",
    "typecheck": "tsc",
    "seed": "node --require ts-node/register",
    "dbseed": "node --require ts-node/register src/database/dbseed.ts",
    "transaction:seed": "node --require ts-node/register src/database/transaction.seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "^9.0.4",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mongoose": "^8.0.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/platform-fastify": "^8.1.2",
    "@nestjs/swagger": "^5.1.0",
    "@nestjs/typeorm": "^8.0.2",
    "apollo-server-fastify": "^3.3.0",
    "aws-sdk": "^2.1004.0",
    "body-parser": "^1.19.0",
    "class-transformer": "0.5.1",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "fastify-swagger": "^4.12.4",
    "graphql": "^15.5.3",
    "mongodb": "3.6.5",
    "mongoose": "^6.0.6",
    "morgan": "^1.10.0",
    "morgan-json": "^1.1.0",
    "nodemailer": "^6.7.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sofa-api": "^0.11.0",
    "typeorm": "^0.2.37",
    "web3-token": "^0.1.32",
    "winston": "^3.3.3",
    "winston-sentry-log": "^1.0.24"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/body-parser": "^1.19.1",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/jest": "^26.0.24",
    "@types/morgan": "^1.9.3",
    "@types/morgan-json": "^1.1.0",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "apollo-server-express": "^3.4.1",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "ethers": "^5.5.1",
    "faker": "^5.5.3",
    "jest": "27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
